{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "jest": {
    "configFile": "jest.config.js"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.config.*",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/cli/templates/**",
    "!examples/**",
    "!test-devsecops/**"
  ],
  "timeoutMS": 30000,
  "concurrency": 2,
  "maxTestRunnerReuse": 10,
  "disableTypeChecking": false,
  "logLevel": "info",
  "thresholds": {
    "high": 80,
    "low": 40,
    "break": 35
  },
  "htmlReporter": {
    "baseDir": "reports/mutation"
  },
  "jsonReporter": {
    "fileName": "reports/mutation/mutation.json"
  }
} 